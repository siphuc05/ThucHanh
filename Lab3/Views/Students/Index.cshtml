@model IEnumerable<Lab3.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Branch)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.IsRegular)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Score)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Email)</td>

                <!-- Hiển thị password dưới dạng *** -->
                <td>
                    @{
                        var masked = new string('*', item.Password?.Length ?? 0);
                    }
                    @masked
                </td>

                <td>@Html.DisplayFor(m => item.Branch)</td>
                <td>@Html.DisplayFor(m => item.Gender)</td>
                <td>@Html.DisplayFor(m => item.IsRegular)</td>
                <td>@Html.DisplayFor(m => item.Address)</td>

                <!-- Format ngày sinh -->
                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>

                <!-- Score -->
                <td>@Html.DisplayFor(m => item.Score)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
